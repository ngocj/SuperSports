@model IEnumerable<SP.Application.Dto.UserDto.UserViewDto>
@{
    ViewData["Title"] = "Quản lý người dùng";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="user-management-container">
    <div class="page-header">
        <div class="header-content">
            <h1><i class="fas fa-users"></i> Quản lý người dùng</h1>
            <div class="actions">
                <a href="@Url.Action("CreateUser", "User")" class="btn btn-success">
                    <i class="fas fa-plus"></i> Thêm người dùng
                </a>
            </div>
        </div>
        <p class="text-muted">Quản lý tất cả tài khoản người dùng trong hệ thống</p>
    </div>

    <div class="card shadow">
        <div class="card-header">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Danh sách người dùng</h5>
                <div class="search-box">
                    <input type="text" id="searchInput" class="form-control border-start-0"
                           placeholder="Tìm kiếm ngươi dùng ...">
                    <i class="fas fa-search search-icon"></i>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table id="userTable" class="table table-hover">
                    <thead>
                        <tr>
                            <th class="text-center">Mã người dùng</th>
                            <th class="text-center">Tên người dùng</th>
                            <th class="text-center">Email</th>
                            <th class="text-center">Vai trò</th>
                            <th class="text-center">Trạng thái</th>
                            <th class="text-center">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            <tr data-user="@user.UserName?.ToLower()">
                                <td class="">@user.Id</td>
                                <td class="text-center">@user.UserName</td>
                                <td class="text-center">@user.Email</td>
                                <td class="text-center">
                                    @{
                                        var badgeText = string.IsNullOrWhiteSpace(user.RoleName) ? "Chưa có vai trò" : user.RoleName;
                                        var badgeClass = user.RoleName switch
                                        {
                                            "Admin" => "bg-danger",        // đỏ cho Admin
                                            "Employee" => "bg-info text-white", // xanh dương nhạt cho Employee
                                            "Manager" => "bg-warning text-white", // vàng cho Manager
                                            _ => "bg-secondary"
                                        };
                                    }

                                    <span class="badge text-white d-inline-block text-center @badgeClass" style="min-width: 100px;">
                                        @badgeText
                                    </span>
                                </td>
                                <td class="text-center">
                                    @if (user.IsActive == true)
                                    {
                                        <span class="badge bg-success text-white">Hoạt động</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger text-white">Đã khóa</span>
                                    }
                                </td>
                                <td class="text-center">
                                    <div class="action-buttons d-flex justify-content-center gap-2">
                                        <a href="@Url.Action("DetailUser", "User", new { id = user.Id })"
                                           data-bs-toggle="tooltip" title="Xem chi tiết"
                                           class="btn btn-sm btn-info">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a href="@Url.Action("UpdateUser", "User", new { id = user.Id })"
                                           data-bs-toggle="tooltip" title="Chỉnh sửa"
                                           class="btn btn-sm btn-primary">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a href="@Url.Action("DeleteUser", "User", new { id = user.Id })"
                                           onclick="return confirm('Bạn có chắc chắn muốn xóa người dùng này?')"
                                           data-bs-toggle="tooltip" title="Xóa"
                                           class="btn btn-sm btn-danger">
                                            <i class="fas fa-trash-alt"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            
            @* <div class="pagination-container mt-4">
                <nav aria-label="Page navigation">
                    <ul class="pagination justify-content-center">
                        <li class="page-item disabled">
                            <a class="page-link" href="#" tabindex="-1" aria-disabled="true">Trước</a>
                        </li>
                        <li class="page-item active"><a class="page-link" href="#">1</a></li>
                        <li class="page-item"><a class="page-link" href="#">2</a></li>
                        <li class="page-item"><a class="page-link" href="#">3</a></li>
                        <li class="page-item">
                            <a class="page-link" href="#">Sau</a>
                        </li>
                    </ul>
                </nav>
            </div> *@
        </div>
    </div>
</div>

<style>
    /* Custom styles for user management page */
    .user-management-container {
        padding: 20px;
    }
    
    .page-header {
        margin-bottom: 25px;
        border-bottom: 1px solid #e0e0e0;
        padding-bottom: 15px;
    }
    
    .page-header .header-content {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }
    
    .page-header h1 {
        font-size: 24px;
        font-weight: 600;
        color: #333;
    }
    
    .page-header i {
        margin-right: 10px;
        color: #4e73df;
    }
    
    .card {
        border: none;
        margin-bottom: 30px;
    }
    
    .card-header {
        background-color: #fff;
        border-bottom: 1px solid rgba(0,0,0,.125);
        padding: 15px 20px;
    }
    
    .search-box {
        position: relative;
        width: 300px;
    }
    
    .search-box input {
        padding-right: 35px;
        border-radius: 20px;
    }
    
    .search-icon {
        position: absolute;
        right: 12px;
        top: 10px;
        color: #aaa;
    }
    
    .table th {
        background-color: #f8f9fc;
        color: #5a5c69;
        font-weight: 600;
        border-top: none;
    }
    
    .table td {
        vertical-align: middle;
    }
    
    .action-buttons {
        display: flex;
        gap: 5px;
    }
    
    .action-buttons .btn {
        width: 32px;
        height: 32px;
        padding: 0;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    
    .user-info {
        display: flex;
        align-items: center;
    }
    
    .avatar {
        width: 35px;
        height: 35px;
        border-radius: 50%;
        background-color: #4e73df;
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: bold;
        margin-right: 10px;
    }
    
    .user-name {
        font-weight: 500;
    }
    
    /* Hover effect on table rows */
    .table-hover tbody tr:hover {
        background-color: rgba(78, 115, 223, 0.05);
    }
    
    /* Badge styles */
    .badge {
        font-weight: 500;
        padding: 5px 10px;
    }
    
    /* Button styles */
    .btn {
        border-radius: 4px;
        font-weight: 500;
    }
    
    .btn-success {
        background-color: #1cc88a;
        border-color: #1cc88a;
    }
    
    .btn-success:hover {
        background-color: #17a673;
        border-color: #169b6b;
    }
    
    .btn-info {
        background-color: #36b9cc;
        border-color: #36b9cc;
        color: white;
    }
    
    .btn-info:hover {
        background-color: #2c9faf;
        border-color: #2a96a5;
        color: white;
    }
    
   
  
    
</style>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl);
        });

        // Client-side user search
        document.getElementById('searchInput').addEventListener('keyup', function () {
            const searchTerm = this.value.toLowerCase();

            document.querySelectorAll('tbody tr[data-user]').forEach(function (row) {
                const UserName = row.getAttribute('data-user');
                if (UserName.includes(searchTerm)) {
                    row.style.display = '';
                } else {
                    row.style.display = 'none';
                }
            });
        });
    });
</script>
