@model SP.Application.Dto.FeedbackDto.FeedbackViewDto

@{
    ViewData["Title"] = "Chi tiết đánh giá";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container mt-4">
    <h2>Chi tiết đánh giá</h2>

    <div class="card">
        <div class="card-body">

            <p class="card-text">
                <strong>Ngày tạo:</strong> @Model.CreatedDate.ToString("g")
            </p>

            <p class="card-text">
                <strong>Người dùng:</strong> @Model.UserName
            </p>

            <p class="card-text">
                <strong>Sản phẩm:</strong> @Model.ProductVariantName
            </p>

            <p class="card-text">
                <strong>Đánh giá (Rating):</strong>
                <span class="text-warning">
                    @for (int i = 0; i < Model.Rating; i++)
                    {
                        <i class="fas fa-star"></i>
                    }
                </span>
                <span class="text-muted">(@Model.Rating/5)</span>
            </p>

            <p class="card-text">
                <strong>Nội dung phản hồi:</strong><br />
                @Model.Comment
            </p>

            <a href="@Url.Action("GetAllFeedback", "Admin")" class="btn btn-secondary mt-3">Quay lại</a>
        </div>
    </div>
</div>
