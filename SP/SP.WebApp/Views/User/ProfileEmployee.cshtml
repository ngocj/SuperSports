@model SP.Application.Dto.EmployeeDto.EmployeeViewDto
@{
    ViewData["Title"] = "ProfileEmployee";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="profile-container">
    <div class="profile-card">
        <!-- Ảnh đại diện -->
        <div class="profile-avatar">
            <img src="https://cdn-icons-png.flaticon.com/512/219/219983.png"
                 alt="Ảnh đại diện người dùng" />
        </div>

        <!-- Thông tin người dùng -->
        <div class="profile-info">
            <h2 class="profile-name">@Model.Name</h2>

            <div class="info-item">
                <i class="fas fa-envelope"></i>
                <span>@Model.Email</span>
            </div>

            <div class="info-item">
                <i class="fas fa-birthday-cake"></i>
                <span>@(Model.DateOfBirth.HasValue ? Model.DateOfBirth.Value.ToString("dd/MM/yyyy") : "Chưa cập nhật")</span>
            </div>

            <div class="info-item">
                <i class="fas fa-phone"></i>
                <span>@(string.IsNullOrEmpty(Model.PhoneNumber) ? "Chưa cập nhật" : Model.PhoneNumber)</span>
            </div>

            <div class="info-item">
                <i class="fas fa-map-marker-alt"></i>
                <span>@(string.IsNullOrEmpty(Model.AddressDetail) ? "Chưa cập nhật" : Model.AddressDetail)</span>
            </div>
        </div>

        <!-- Nút chức năng theo vai trò -->
        <div class="profile-actions">
            @if (ViewBag.IsAdmin == true)
            {
                <a asp-action="Index" asp-controller="Admin" class="btn btn-admin">
                    <i class="fas fa-cog"></i> Trang Quản trị
                </a>
            }

            @if (ViewBag.IsManager == true)
            {
                <a asp-action="Index" asp-controller="Manager" class="btn btn-manager">
                    <i class="fas fa-clipboard-list"></i> Trang Quản lý
                </a>
            }

            @if (ViewBag.IsEmployee == true)
            {
                <a asp-action="Index" asp-controller="Employee" class="btn btn-employee">
                    <i class="fas fa-user-tie"></i> Trang Nhân viên
                </a>
            }
            @if (ViewBag.IsUser == true)
            {
                <a asp-action="OrderHistory" asp-controller="Order" class="btn btn-history">
                    <i class="fas fa-history"></i> Lịch sử đơn hàng
                </a>
            }

            <a asp-action="Index" asp-controller="Home" class="btn btn-back">
                <i class="fas fa-arrow-left"></i> Quay lại trang chủ
            </a>
        </div>
    </div>
</div>

<style>
    .container {
        max-width: 1400px;
        margin: 0 auto;
        padding: 0 20px;
    }

    .profile-container {
        max-width: 800px;
        margin: 2rem auto;
        padding: 0 1rem;
    }

    .profile-card {
        background: #fff;
        border-radius: 12px;
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        padding: 2rem;
        text-align: center;
    }

    .profile-avatar {
        margin-bottom: 1.5rem;
    }

        .profile-avatar img {
            width: 150px;
            height: 150px;
            border-radius: 50%;
            object-fit: cover;
            border: 4px solid #f8f9fa;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

    .profile-name {
        color: #333;
        margin-bottom: 1.5rem;
        font-weight: 600;
    }

    .profile-info {
        margin-bottom: 2rem;
        text-align: left;
        max-width: 400px;
        margin-left: auto;
        margin-right: auto;
    }

    .info-item {
        display: flex;
        align-items: center;
        margin-bottom: 1rem;
        padding: 0.5rem 0;
        border-bottom: 1px solid #f0f0f0;
    }

        .info-item i {
            width: 30px;
            color: #6c757d;
            font-size: 1.1rem;
        }

        .info-item span {
            flex: 1;
            color: #495057;
        }

    .profile-actions {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .btn {
        padding: 0.8rem;
        border-radius: 8px;
        font-weight: 500;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
        transition: all 0.3s ease;
        border: none;
    }

    .btn-admin {
        background-color: #dc3545;
        color: white;
    }

        .btn-admin:hover {
            background-color: #bb2d3b;
            transform: translateY(-2px);
        }

    .btn-manager {
        background-color: #fd7e14;
        color: white;
    }

        .btn-manager:hover {
            background-color: #e66a00;
            transform: translateY(-2px);
        }

    .btn-employee {
        background-color: #20c997;
        color: white;
    }

        .btn-employee:hover {
            background-color: #1aa179;
            transform: translateY(-2px);
        }

    .btn-history {
        background-color: #0d6efd;
        color: white;
    }

        .btn-history:hover {
            background-color: #0b5ed7;
            transform: translateY(-2px);
        }

    .btn-back {
        background-color: #f8f9fa;
        color: #495057;
        border: 1px solid #dee2e6;
    }

        .btn-back:hover {
            background-color: #e9ecef;
            transform: translateY(-2px);
        }

    @@media (max-width: 576px) {
        .profile-avatar img {
            width: 120px;
            height: 120px;
        }

        .profile-info {
            text-align: center;
        }

        .info-item {
            justify-content: center;
        }
    }
</style>

