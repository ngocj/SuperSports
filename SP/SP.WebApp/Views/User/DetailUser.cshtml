@model SP.Application.Dto.UserDto.UserViewDto
@{
    ViewData["Title"] = "User Details";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<style>
    .user-detail-card {
        border: none;
        border-radius: 10px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .user-detail-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.12);
        }

    .card-header {
        background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);
        color: white;
        border-radius: 10px 10px 0 0 !important;
        padding: 1.5rem;
    }

    .detail-title {
        font-weight: 600;
        letter-spacing: 0.5px;
        color: #5a5a5a;
    }

    .detail-value {
        font-weight: 500;
        color: #333;
    }

    .status-badge {
        padding: 0.35em 0.65em;
        font-size: 0.85em;
        letter-spacing: 0.5px;
    }

    .action-btn {
        border-radius: 50px;
        padding: 0.5rem 1.5rem;
        font-weight: 500;
        letter-spacing: 0.5px;
    }

    .divider {
        border-top: 1px dashed #e0e0e0;
        margin: 1rem 0;
    }

    .user-avatar {
        width: 80px;
        height: 80px;
        border-radius: 50%;
        background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        color: #6a11cb;
        font-size: 2rem;
        font-weight: bold;
        margin-right: 1.5rem;
    }
</style>

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 font-weight-bold text-primary">User Details</h1>
        <a asp-action="Index" class="btn btn-outline-secondary action-btn">
            <i class="fas fa-arrow-left mr-2"></i>Back to List
        </a>
    </div>

    <div class="card user-detail-card mb-4">
        <div class="card-header d-flex align-items-center">
            <div class="user-avatar">
                @Model.UserName.Substring(0, 1).ToUpper()
            </div>
            <div>
                <h4 class="mb-1">@Model.UserName</h4>
                <p class="mb-0 text-white-50">User ID: @Model.Id</p>
            </div>
        </div>

        <div class="card-body p-4">
            <div class="row">
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4 detail-title">Email:</dt>
                        <dd class="col-sm-8 detail-value">@Model.Email</dd>

                        <dt class="col-sm-4 detail-title">Phone:</dt>
                        <dd class="col-sm-8 detail-value">@(Model.PhoneNumber ?? "N/A")</dd>

                        <dt class="col-sm-4 detail-title">Date of Birth:</dt>
                        <dd class="col-sm-8 detail-value">@(Model.DateOfBirth?.ToString("dd MMMM yyyy") ?? "N/A")</dd>
                    </dl>
                </div>

                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4 detail-title">Role:</dt>
                        <dd class="col-sm-8 detail-value">
                            <span class="badge bg-primary status-badge">@Model.RoleName</span>
                        </dd>

                        <dt class="col-sm-4 detail-title">Status:</dt>
                        <dd class="col-sm-8 detail-value">
                            @if (Model.IsActive.HasValue)
                            {
                                <span class="badge @(Model.IsActive.Value ? "bg-success" : "bg-danger") status-badge">
                                    @(Model.IsActive.Value ? "Active" : "Inactive")
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-secondary status-badge">N/A</span>
                            }
                        </dd>

                        <dt class="col-sm-4 detail-title">Ward ID:</dt>
                        <dd class="col-sm-8 detail-value">@(Model.WardId?.ToString() ?? "N/A")</dd>
                    </dl>
                </div>
            </div>

            <div class="divider"></div>

            <div class="row">
                <div class="col-12">
                    <dt class="detail-title mb-2">Address:</dt>
                    <dd class="detail-value">@(Model.AddressDetail ?? "No address provided")</dd>
                </div>
            </div>
        </div>

        <div class="card-footer bg-white border-0 d-flex justify-content-end py-3">
            <a asp-action="UpdateUser" asp-route-id="@Model.Id" class="btn btn-primary action-btn ml-2">
                <i class="fas fa-edit mr-2"></i>Edit User
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Thêm hiệu ứng khi trang được tải
        $(document).ready(function () {
            $('.user-detail-card').hide().fadeIn(400);
        });
    </script>
}