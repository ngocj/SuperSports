@model SP.Application.Dto.EmployeeDto.EmployeeViewDto
@{
    ViewData["Title"] = "DetailEmployee";
    Layout = "~/Views/Shared/_LayoutManager.cshtml";
}
<style>
    .user-detail-container {
        max-width: 900px;
        margin: 0 auto;
        padding: 20px 10px;
    }

    .page-title {
        color: #2c3e50;
        margin-bottom: 25px;
        font-weight: 600;
        position: relative;
        padding-bottom: 10px;
    }

        .page-title:after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 0;
            width: 50px;
            height: 3px;
            background-color: #3498db;
        }

    .user-card {
        border-radius: 8px;
        overflow: hidden;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        border: none;
        margin-bottom: 30px;
    }

    .user-card-header {
        background-color: #4E73DF;
        padding: 15px 20px;
        border-bottom: none;
    }

    .user-name {
        font-size: 1.4rem;
        margin-bottom: 0;
        font-weight: 500;
    }

    .user-card-body {
        padding: 25px;
    }

    .detail-label {
        font-weight: 600;
        color: #555;
    }

    .detail-value {
        padding-top: 3px;
        color: #333;
    }

    .user-info-row {
        margin-bottom: 15px;
        border-bottom: 1px solid #eee;
        padding-bottom: 15px;
    }

        .user-info-row:last-child {
            border-bottom: none;
            margin-bottom: 0;
        }

    .badge-active {
        background-color: #27ae60;
        padding: 7px 12px;
        font-weight: 500;
        font-size: 0.9rem;
    }

    .badge-inactive {
        background-color: #e74c3c;
        padding: 7px 12px;
        font-weight: 500;
        font-size: 0.9rem;
    }

    .back-btn {
        background-color: #34495e;
        border: none;
        padding: 10px 20px;
        font-weight: 500;
        transition: all 0.3s ease;
    }

        .back-btn:hover {
            background-color: #2c3e50;
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .back-btn i {
            margin-right: 5px;
        }

    .not-updated {
        color: #999;
        font-style: italic;
    }
</style>

<div class="user-detail-container">
    <h2 class="page-title">Chi tiết nhân viên</h2>

    <div class="card user-card ">
        <div class="card-header user-card-header text-white">
            <h5 class="user-name text-center">@Model.Name</h5>
        </div>
        <div class="card-body user-card-body">
            <div class="row user-info-row">
                <div class="col-sm-4 detail-label">Mã nhân viên</div>
                <div class="col-sm-8 detail-value">@Model.Id</div>
            </div>
            <div class="row user-info-row">
                <div class="col-sm-4 detail-label">Email</div>
                <div class="col-sm-8 detail-value">@Model.Email</div>
            </div>
            <div class="row user-info-row">
                <div class="col-sm-4 detail-label">Số điện thoại</div>
                <div class="col-sm-8 detail-value">
                    @if (string.IsNullOrEmpty(Model.PhoneNumber))
                    {
                        <span class="not-updated">Chưa cập nhật</span>
                    }
                    else
                    {
                        @Model.PhoneNumber
                    }
                </div>
            </div>
            <div class="row user-info-row">
                <div class="col-sm-4 detail-label">Ngày sinh</div>
                <div class="col-sm-8 detail-value">
                    @if (Model.DateOfBirth.HasValue)
                    {
                        @Model.DateOfBirth.Value.ToString("dd/MM/yyyy")
                    }
                    else
                    {
                        <span class="not-updated">Chưa cập nhật</span>
                    }
                </div>
            </div>
            <div class="row user-info-row">
                <div class="col-sm-4 detail-label">Địa chỉ</div>
                <div class="col-sm-8 detail-value">
                    @if (string.IsNullOrEmpty(Model.AddressDetail))
                    {
                        <span class="not-updated">Chưa cập nhật</span>
                    }
                    else
                    {
                        @Model.AddressDetail
                    }
                </div>
            </div>
            <div class="row user-info-row">
                <div class="col-sm-4 detail-label">Vai trò</div>
                <div class="col-sm-8 detail-value">
                    @if (string.IsNullOrEmpty(Model.RoleName))
                    {
                        <span class="not-updated">Chưa có vai trò</span>
                    }
                    else
                    {
                        @Model.RoleName
                    }
                </div>
            </div>
            <div class="row user-info-row">
                <div class="col-sm-4 detail-label">Trạng thái</div>
                <div class="col-sm-8 detail-value">
                    @if (Model.IsActive == true)
                    {
                        <span class="badge badge-active text-white">Hoạt động</span>
                    }
                    else
                    {
                        <span class="badge badge-inactive text-white">Đã khóa</span>
                    }
                </div>
            </div>
        </div>
    </div>

    <a asp-action="GetAllEmployee" asp-controller="Manager" class="btn btn-secondary">
        <i class="fas fa-arrow-left"></i> Quay lại danh sách
    </a>
</div>

