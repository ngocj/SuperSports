@model SP.Application.Dto.EmployeeDto.EmployeeUpdateDto
@{
    ViewData["Title"] = "UpdateEmployee";
    Layout = "~/Views/Shared/_LayoutManager.cshtml";
}
}
<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Cập nhật </h5>
                </div>
                <div class="card-body">
                    <form asp-action="UpdateEmployee" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group mb-3">
                            <label asp-for="RoleId" class="control-label">Vai trò</label>
                            <select asp-for="RoleId" asp-items="ViewBag.Roles" class="form-select">
                                <option value="">-- Chọn vai trò --</option>
                            </select>
                            <span asp-validation-for="RoleId" class="text-danger"></span>
                        </div>

                        <div class="form-check mb-3">
                            <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                            <label asp-for="IsActive" class="form-check-label">Kích hoạt</label>
                        </div>

                        <div class="d-flex justify-content-end">
                            <a asp-action="GetAllEmployee" asp-controller="Manager" class="btn btn-secondary me-2">Quay lại</a>
                            <button type="submit" class="btn btn-primary mx-2">Cập nhật</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}


